<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:local="clr-namespace:MaxVonGrafKftMobile.MarkupExtensions"
             x:Class="MaxVonGrafKftMobile.Views.UpdateApplication"
              BackgroundColor="{StaticResource MaxVonWhite}"
                 NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <StackLayout VerticalOptions="FillAndExpand" 
                HorizontalOptions="CenterAndExpand"
                     Margin="20">

            <Label
                Margin="0,10,0,20"
                        FontAttributes="Bold"
                        FontFamily="Roboto-Bold"
                        HorizontalOptions="CenterAndExpand"
                        Text="Update Application"
                        TextColor="{StaticResource MaxVonRed}"
                        VerticalOptions="End">
                <Label.FontSize>
                    <OnPlatform x:TypeArguments="x:Double">
                        <On Platform="iOS">
                            <OnIdiom
                                        x:TypeArguments="x:Double"
                                        Phone="25"
                                        Tablet="29" />
                        </On>
                        <On Platform="Android,Windows">
                            <OnIdiom
                                        x:TypeArguments="x:Double"
                                        Phone="26"
                                        Tablet="30" />
                        </On>
                    </OnPlatform>
                </Label.FontSize>
            </Label>

            <Image
                    HorizontalOptions="CenterAndExpand"
                VerticalOptions="CenterAndExpand"
                    x:Name="illuImage"
                    Margin="10,0,10,10"
                    Aspect="AspectFit"
                    Source="{local:EmbeddedImage ResourceId=MaxVonGrafKftMobile.Assets.Illustrations.Update.png}">
                <Image.HeightRequest>
                    <OnPlatform x:TypeArguments="x:Double">
                        <On Platform="iOS">
                            <OnIdiom
                                    x:TypeArguments="x:Double"
                                    Phone="220"
                                    Tablet="260" />
                        </On>
                        <On Platform="Android,Windows">
                            <OnIdiom
                                    x:TypeArguments="x:Double"
                                    Phone="220"
                                    Tablet="260" />
                        </On>
                    </OnPlatform>
                </Image.HeightRequest>
            </Image>

            <Label
                        Margin="0,0,0,20"
                        FontFamily="Roboto-Medium"
                HorizontalTextAlignment="Center"
                        HorizontalOptions="CenterAndExpand"
                        Text="An update is required to keep using this application. "
                        TextColor="{StaticResource MaxVonBlack}"
                        VerticalOptions="End">
                <Label.FontSize>
                    <OnPlatform x:TypeArguments="x:Double">
                        <On Platform="iOS">
                            <OnIdiom
                                        x:TypeArguments="x:Double"
                                        Phone="20"
                                        Tablet="24" />
                        </On>
                        <On Platform="Android,Windows">
                            <OnIdiom
                                        x:TypeArguments="x:Double"
                                        Phone="22"
                                        Tablet="26" />
                        </On>
                    </OnPlatform>
                </Label.FontSize>
            </Label>



            <Button
                Margin="10,0,10,20"
                        x:Name="updateBtn"
                        BackgroundColor="{StaticResource MaxVonRed}"
                        BorderWidth="0"
                        Clicked="updateBtn_Clicked"
                        CornerRadius="10"
                        FontFamily="Roboto-Medium"
                        HorizontalOptions="FillAndExpand"
                        StyleClass="bouncy"
                        Text="Update Now"
                        TextColor="{StaticResource MaxVonWhite}"
                        VerticalOptions="End">
                <Button.HeightRequest>
                    <OnPlatform x:TypeArguments="x:Double">
                        <On Platform="iOS">
                            <OnIdiom
                                        x:TypeArguments="x:Double"
                                        Phone="50"
                                        Tablet="60" />
                        </On>
                        <On Platform="Android,Windows">
                            <OnIdiom
                                        x:TypeArguments="x:Double"
                                        Phone="50"
                                        Tablet="60" />
                        </On>
                    </OnPlatform>
                </Button.HeightRequest>
                <Button.FontSize>
                    <OnPlatform x:TypeArguments="x:Double">
                        <On Platform="iOS">
                            <OnIdiom
                                        x:TypeArguments="x:Double"
                                        Phone="14"
                                        Tablet="18" />
                        </On>
                        <On Platform="Android,Windows">
                            <OnIdiom
                                        x:TypeArguments="x:Double"
                                        Phone="16"
                                        Tablet="20" />
                        </On>
                    </OnPlatform>
                </Button.FontSize>
            </Button>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>